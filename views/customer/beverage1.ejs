            <div class="row">
              <div class="col-6 col-md-3">
                <div class="box">
                  <div class="img-container">
                      <img class="imageFoecate" src="..\outlineCategory\images\Beverages\Bok Ford Concentrated Thai Lime Flavored Water 750ml 133 baht per bottle.png" alt="Bok Ford Concentrated Thai Lime Flavored Water 750ml">
                  </div>
                  <div class="descript">
                      <p>Bok Ford Concentrated Thai Lime Water 750ml.</p>
                  </div>
                  <div class="cartButton">
                    <p><span style="color: red; margin-left: 4%;">฿133.00/Bottle</span></p>
                    <button class="cart">ADD TO CART</button>
                  </div>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="box">
                  <div class="img-container">
                      <img class="imageFoecate" src="..\outlineCategory\images\Beverages\Coco coconut water 100 percent 330 ml 25 baht per box.png" alt="Coco coconut water 100 percent 330 ml">
                  </div>
                  <div class="descript">
                      <p>Coco coconut water 100 percent 330 ml.</p>
                  </div>
                  <div class="cartButton">
                    <p><span style="color: red; margin-left: 4%;">฿25.00/Box</span></p>
                    <button class="cart">ADD TO CART</button>
                  </div>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="box">
                  <div class="img-container">
                      <img class="imageFoecate" src="..\outlineCategory\images\Beverages\Doi Kham Tomato Juice 98 percent 1000ml 76B per box.png" alt="Doi Kham Tomato Juice 98 percent 1000ml">
                  </div>
                  <div class="descript">
                      <p>Doi Kham Tomato Juice 98 percent 1000ml.</p>
                  </div>
                  <div class="cartButton">
                    <p><span style="color: red; margin-left: 4%;">฿76.00/Box</span></p>
                    <button class="cart">ADD TO CART</button>
                  </div>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="box">
                  <div class="img-container">
                      <img class="imageFoecate" src="..\outlineCategory\images\Beverages\Harvey Fresh Apple Juice 1000 ml 129 baht per box.png" alt="Harvey Fresh Apple Juice 1000 ml">
                  </div>
                  <div class="descript">
                      <p>Harvey Fresh Apple Juice 1000ml.</p>
                  </div>
                  <div class="cartButton">
                    <p><span style="color: red; margin-left: 4%;">฿129.00/Box</span></p>
                    <button class="cart">ADD TO CART</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </section>

    <section>
      <div id="pagination" class="text-center">
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#" onclick="goToPage(1)">1</a></li>
            <li class="page-item"><a class="page-link" href="#" onclick="goToPage(2)">2</a></li>
            <li class="page-item"><a class="page-link" href="#" onclick="goToPage(3)">3</a></li>
          </ul>
        </nav>
      </div>
    </section>

    <%- include('partials/footer')  %>

    <script>

      function goToPage(pageNumber) {
      if (pageNumber === 1 && window.location.href !== "/html2/Customer/beverage1.html") {
        window.location.href = "/html2/Customer/beverage1.html";
      }
      else if (pageNumber === 2 && window.location.href !== "/html2/Customer/beverage2.html") {
        window.location.href = "/html2/Customer/beverage2.html";
      }
       else if (pageNumber === 3 && window.location.href !== "/html2/Customer/beverage3.html") {
        window.location.href = "/html2/Customer/beverage3.html";
      }
    }

    </script>
    
